<% my $numForests = scalar @{$companies}; %>
{
    "numForests": "<%== $numForests %>",
    "forests": [
        <% for my $i (0..($numForests - 1)) { %>
        {
            "id": "<%== $companies->[$i]->{'id'} %>",
            "name": "<%== $companies->[$i]->{'name'} %>",
            "description": "<%== $companies->[$i]->{'description'} %>"
        }
        <%== "," if $i != ($numForests - 1) %>
        <% } %>
    ]
}
